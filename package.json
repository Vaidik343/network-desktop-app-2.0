{
  "name": "dc-scan-network",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "mac-lookup": "^1.0.1",
    "nsis": "^0.0.0",
    "oui": "^13.0.5",
    "ping": "^0.4.4",
    "xlsx": "^0.18.5"
  },
"build": {
  "appId": "com.dcscan.network",
  "productName": "DC Scan Network",
  "files": [
    "**/*",
    "assets/bootstrap/**/*",
     "node_modules/oui/**/*",
  "node_modules/mac-lookup/**/*"
  ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DC Scan Network"
    }
  }
}
